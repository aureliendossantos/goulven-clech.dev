---
// style dependancies
import "../main.css"
import "@fontsource/cascadia-code"
/**
 * Base of our html. Mainly html head & some global styles.
 * @param {string} title - What is this page about?
 */
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="https://kit.fontawesome.com/3977585fab.js" crossorigin="anonymous"></script>
    <title>{title} | Goulven Clec'h</title>
  </head>
  <body class="bg-body-light text-base-light dark:bg-body-dark dark:text-base-dark">
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: cascadia code;
  }
</style>
