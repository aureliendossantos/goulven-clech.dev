---
/**
 * A classic section of our blog
 * @param {string} title - What is this section about?
 */
interface Props {
  title: string
}

const { title } = Astro.props
---

<section class="my-12 sm:my-24">
  <h2 class="text-base-black dark:text-base-white pb-6 font-bold text-2xl sm:text-3xl">
    {title}
  </h2>

  <slot />
</section>
