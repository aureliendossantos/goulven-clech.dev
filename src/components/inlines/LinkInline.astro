---
/**
 * Used to standardize our external hyperlinks across the blog
 * @param {string} to - Where are we going? (external)
 */
interface Props {
  to: string
}

const { to } = Astro.props
---

<a
  href={to}
  class="whitespace-nowrap font-bold underline decoration-dashed decoration-2 underline-offset-3 hover:text-primary"
  ><slot /><i class="fa-solid fa-square-up-right pl-1 text-xs"></i></a
>
