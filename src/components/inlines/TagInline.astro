---
/**
 * A link to a specific tag of our blog, with a cool icon
 * @param {string} to - What tag are we going to?
 */
interface Props {
  to: string
}

const { to } = Astro.props
---

<a
  href={to}
  class="whitespace-nowrap font-bold underline decoration-dashed decoration-2 underline-offset-3 hover:text-primary"
>
  <i class="fa-solid fa-tag pr-1"></i><slot /></a
>
