---
import { Image } from "astro:assets"

/**
 * Wrap an Astro image in a html figure with caption.
 * @param {string} src - Where is the source image?
 * @param {string} alt - How do you describe the image?
 * @param {number} width - What's the source image's width?
 * @param {number} height - What's the source image's height?
 * @param {string} caption - What caption should we put next?
 */
interface Props {
  src: string
  alt: string
  width: number
  height: number
  caption: string
}

const { src, alt, width, height, caption } = Astro.props
---

<figure>
  <Image
    src={src}
    width={width}
    height={height}
    class="w-full rounded-lg object-cover aspect-video"
    alt={alt}
  />
  <figcaption class="mb-16 mt-2 text-center text-sm italic">
    {caption}
  </figcaption>
</figure>
