---
/**
 * Used to display the main page title, and the go home button.
 * @param {string} title - What is this page about?
 * @param {boolean} isHome - Is this the home page?
 */
interface Props {
  title: string
  isHome: boolean
}

const { title, isHome } = Astro.props
---

<section class="my-12 md:mt-24">
  <nav>
    {!isHome && (
      <a href="/" class="block pb-6 font-bold hover:text-primary">
        <i class="fas fa-arrow-left"></i>
        Home
      </a>
    )}
    <h1 class="pb-6 text-3xl font-bold leading-tight md:text-4xl md:leading-tight">
      {title}
    </h1>
    <slot />
  </nav>
</section>
