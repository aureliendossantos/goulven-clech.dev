---
/**
 * Used to present an article as a card, also a link to that article.
 * @param {any} article - What an exciting article we want to show?
 */
interface Props {
  article: any // TO DO: should be better typed
}

const { article } = Astro.props
---

<a
  href={`/blog/${article.slug}`}
  class="rounded-xl px-4 py-3 hover:bg-highlight-light dark:hover:bg-highlight-dark"
>
  <article>
    <h3 class="pb-2 text-lg font-bold md:text-xl">
      {article.data.title}
    </h3>
    <div>
      <i class="fa-solid fa-calendar-day w-3.5 md:w-4"></i>
      {article.data.date.toDateString()}
      <i class="fa-solid fa-tags ml-3 w-3.5 md:w-4"></i>
      {article.data.tags.join(", ")}
    </div>
    <p class="mt-3 text-ellipsis py-0 line-clamp-3">
      {article.data.abstract}
    </p>
  </article>
</a>
